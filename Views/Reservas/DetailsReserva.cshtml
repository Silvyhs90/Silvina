@model tpc5FI.Models.Reserva

@{
    ViewData["Title"] = "Reservar";
}

<h1>Detalles de la Reserva</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FDesde" class="control-label"></label>
                <input readonly type="datetime" value="@Model.FDesde" asp-for="FDesde" class="form-control" />
              
            </div>
            <div class="form-group">
                <label asp-for="FHasta" class="control-label"></label>
                <input readonly type="datetime" value="@Model.FHasta" asp-for="FHasta" class="form-control" />
             
            </div>
            <div class="form-group hide">
                
                <input hidden asp-for="codigoAlojamiento" class="form-control" />
                <span asp-validation-for="codigoAlojamiento" class="text-danger"></span>
            </div>
            <div class="form-group hide">
                
                <input hidden asp-for="codigoPersona" class="form-control" />
                <span asp-validation-for="codigoPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input readonly asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreAlojamiento" class="control-label"></label>
                <input readonly asp-for="nombreAlojamiento" class="form-control" />
                <span asp-validation-for="nombreAlojamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reservar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Alojamiento" asp-action="Buscador" class="btn btn-danger">Cancelar</a>
</div>


