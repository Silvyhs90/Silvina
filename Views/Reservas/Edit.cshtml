@model tpc5FI.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="FDesde" class="control-label"></label>
                <input asp-for="FDesde" class="form-control" />
                <span asp-validation-for="FDesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FHasta" class="control-label"></label>
                <input asp-for="FHasta" class="form-control" />
                <span asp-validation-for="FHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoAlojamiento" class="control-label"></label>
                <input asp-for="codigoAlojamiento" min="1" class="form-control" />
                <span asp-validation-for="codigoAlojamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoPersona" class="control-label"></label>
                <input asp-for="codigoPersona" min="1" class="form-control" />
                <span asp-validation-for="codigoPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" min="1" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Volver a Reservas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
